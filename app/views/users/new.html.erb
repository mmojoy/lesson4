
<div class="form-title lined">Sign <span class="blue-text">Up</span></div>

<%= form_for @user, html: {:class => 'form'}, remote: true do |f| %>
<div class="input-holder">
	<%= f.text_field :name%>
	<%= f.label :name %>
</div>
<div class="input-holder">
	<%= f.text_field :email %>
	<%= f.label :email %>
</div>
<div class="input-holder">
	<%= f.password_field :password %>
	<%= f.label :password %>
</div>
<div class="input-holder">
	<%= f.password_field :password_confirmation %>
	<%= f.label :password_confirmation %>
</div>
<!-- 
	<%= f.submit 'Create user'%> -->

	<%= button_tag(type: 'submit', class: "submit-btn") do %>
	Create user
	<% end %>

	<% end %>